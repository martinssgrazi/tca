<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
            android:text="@string/login"
            android:layout_width="97dp"
            android:layout_height="76dp"
            android:id="@+id/txtLogin"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="124dp"
            app:layout_constraintEnd_toStartOf="@+id/plainLogin" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:background="#AB94D8" android:textSize="18sp" android:textStyle="bold"
            android:gravity="center" android:orientation="vertical"/>
    <TextView
            android:text="@string/pass"
            android:layout_width="96dp"
            android:layout_height="68dp"
            android:id="@+id/txtSenha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:background="#AB94D8" android:textSize="18sp" android:textStyle="bold" android:gravity="center"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/txtLogin"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="72dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/plainLogin" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.704"
            android:text="zizi@gmail.com"/>
    <EditText
            android:layout_width="224dp"
            android:layout_height="71dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/plainLogin"
            android:id="@+id/plainSenha" android:text="oioioi" app:layout_constraintStart_toEndOf="@+id/txtSenha"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Ou se cadastre clicando aqui"
            android:layout_width="194dp"
            android:layout_height="28dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.592" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plainSenha" android:textStyle="bold|italic"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="54dp" app:srcCompat="@drawable/ic_success"
            android:id="@+id/btLogin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.551"
            tools:ignore="VectorDrawableCompat"/>
</androidx.constraintlayout.widget.ConstraintLayout>