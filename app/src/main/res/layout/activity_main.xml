<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Login"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:id="@+id/txtLogin"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="44dp"
                app:layout_constraintEnd_toStartOf="@+id/plainLogin" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="Senha"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:id="@+id/txtSenha"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp" android:layout_marginStart="44dp"
                app:layout_constraintEnd_toStartOf="@+id/plainSenhaR" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/txtLogin" app:layout_constraintHorizontal_bias="0.625"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/plainLogin" android:layout_marginTop="44dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.67"
                android:text="zizi@gmail.com"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/plainLogin" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.934" android:id="@+id/plainSenha" android:text="oioioi"/>
        <Button
                android:text="Logar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btLogin" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.618" android:layout_marginTop="220dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Ou se cadastre clicando aqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.409" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/plainSenha"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>