<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfigActivity">

    <RadioGroup
            android:layout_width="144dp"
            android:layout_height="114dp"
            android:id="@+id/rgDificuldade"
            tools:layout_editor_absoluteY="88dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <RadioButton
                android:text="Fácil"
                android:layout_width="158dp"
                android:layout_height="44dp" android:id="@+id/rbFacil" android:layout_weight="1"
                tools:text="Fácil"/>
        <RadioButton
                android:text="Médio"
                android:layout_width="158dp"
                android:layout_height="52dp" android:id="@+id/rbMedio" android:layout_weight="1"
                tools:text="Médio"/>
        <RadioButton
                android:text="Difícil"
                android:layout_width="158dp"
                android:layout_height="53dp" android:id="@+id/rbDificil" android:layout_weight="1"
                tools:text="Dificil"/>
    </RadioGroup>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="400dp"
            android:layout_height="378dp" android:id="@+id/listCategorias"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rgDificuldade" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btSalvar"
            app:layout_constraintVertical_bias="1.0">
    </androidx.recyclerview.widget.RecyclerView>
    <Button
            android:text="Jogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btSalvar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>