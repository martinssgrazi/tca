<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="122dp"
                android:layout_height="56dp"
                android:id="@+id/txtNome"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toStartOf="@+id/txtPontuacao" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:background="#AB94D8" app:layout_constraintVertical_bias="1.0"
                android:gravity="center"/>
        <TextView
                android:layout_width="86dp"
                android:layout_height="56dp"
                android:id="@+id/txtPontuacao"
                app:layout_constraintStart_toEndOf="@+id/txtNome"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:gravity="center"/>
        <TextView
                android:layout_width="85dp"
                android:layout_height="59dp"
                android:id="@+id/txtUltima"
                app:layout_constraintStart_toEndOf="@+id/txtPontuacao"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:background="#AB94D8"/>
        <TextView
                android:layout_width="72dp"
                android:layout_height="52dp"
                android:id="@+id/txtPrimeira"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtUltima" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>